<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mp_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="8dp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" android:layout_weight="1"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mp_artist"
            android:layout_marginStart="0dp" android:layout_marginEnd="0dp"
            android:ellipsize="end" android:singleLine="true" android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginBottom="4dp" android:text="@string/mp_artist_placeholder"/>
    <TextView
            android:text="@string/mp_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mp_title"
            android:layout_marginStart="0dp" android:layout_marginEnd="0dp"
            android:ellipsize="end" android:singleLine="true" android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"
    />
    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent"
                  android:orientation="horizontal" android:id="@+id/mp_seekbox"
                  android:layout_marginEnd="8dp"
                  android:layout_marginStart="8dp">
        <TextView
                android:text="@string/mp_empty_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mp_progress"/>
        <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mp_seek"
                android:layout_weight="1"/>

        <TextView
                android:text="@string/mp_empty_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mp_duration"
        />
    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent"
                  android:orientation="horizontal" android:id="@+id/mp_buttonbox"
                  android:gravity="center">
        <ImageButton
                android:layout_width="64dp"
                android:layout_height="64dp" app:srcCompat="@drawable/ic_previous"
                android:id="@+id/mp_previous"
                android:scaleType="fitCenter"/>
        <ImageButton
                android:layout_width="64dp"
                android:layout_height="64dp" app:srcCompat="@drawable/ic_play"
                android:id="@+id/mp_playpause"
                android:scaleType="fitCenter"/>
        <ImageButton
                android:layout_width="64dp"
                android:layout_height="64dp" app:srcCompat="@drawable/ic_next"
                android:id="@+id/mp_next"
                android:scaleType="fitCenter"/>
    </LinearLayout>
</LinearLayout>